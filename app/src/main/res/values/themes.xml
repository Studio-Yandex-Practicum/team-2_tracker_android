<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="appBackgroundColor" format="color"/>
    <attr name="appTextPrimary" format="color"/>
    <attr name="appTextSecondary" format="color"/>
    <attr name="appDividers" format="color"/>
    <attr name="appCardBackground" format="color"/>
    <attr name="appCardText" format="color"/>
    <attr name="appNotActiveColor" format="color"/>
    <attr name="appErrorColor" format="color"/>
    <attr name="appAccentColor" format="color"/>
    <attr name="appAccentColorFade" format="color"/>
    <attr name="appCategoryIconBackground" format="color"/>
    <attr name="appButtonColor" format="color"/>

    <!-- Base application theme. -->
    <style name="Base.Theme.Tratometr" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="appBackgroundColor">@color/background</item>
        <item name="appTextPrimary">@color/text_primary</item>
        <item name="appTextSecondary">@color/text_secondary</item>
        <item name="appDividers">@color/dividers</item>
        <item name="appCardBackground">@color/cards</item>
        <item name="appCardText">@color/dark_cards</item>
        <item name="appNotActiveColor">@color/not_active</item>
        <item name="appErrorColor">@color/error</item>
        <item name="appAccentColor">@color/accented</item>
        <item name="appAccentColorFade">@color/accented_fade</item>
        <item name="appCategoryIconBackground">@color/category_ic_background</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.Tratometr.AppTimePicker</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.Tratometr.AppDatePicker</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.Tratometr.AppDatePicker.Fullscreen</item>
        <item name="appButtonColor">@color/cards</item>

        <item name="colorPrimary">@color/accented</item>
        <item name="android:colorBackground">@color/background</item>

    </style>

    <style name="Theme.Tratometr" parent="Base.Theme.Tratometr"/>

    <style name="AppTextH0">
        <item name="android:fontFamily">@font/manrope_weight700_bold</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="AppTextH1">
        <item name="android:fontFamily">@font/manrope_weight600_semibold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="AppTextH2">
        <item name="android:fontFamily">@font/manrope_weight600_semibold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTextH3">
        <item name="android:fontFamily">@font/manrope_weight600_semibold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTextPrimary">
        <item name="android:fontFamily">@font/manrope_weight400_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTextPrimary.AllCaps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTextButton">
        <item name="android:fontFamily">@font/manrope_weight600_semibold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTextSecondary">
        <item name="android:fontFamily">@font/manrope_weight400_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTextSecondaryBold">
        <item name="android:fontFamily">@font/manrope_weight400_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextBigNumber">
        <item name="android:fontFamily">@font/manrope_weight700_bold</item>
        <item name="android:textSize">@dimen/text_size_36</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="AppTextAnalyticsAmount">
        <item name="android:fontFamily">@font/manrope_weight600_semibold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="AppEditTextPrimary" parent="AppTextPrimary">
        <item name="android:textColorHint">?attr/appTextSecondary</item>
        <item name="android:textCursorDrawable">@drawable/blue_cursor</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_40dp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SwitchApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:layout_marginEnd">@dimen/size_16dp</item>
        <item name="android:background">@drawable/card_background_regular</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/AppTextPrimary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/appTextPrimary</item>
        <item name="trackTint">@color/switch_track_tint_selector</item>
        <item name="thumbTint">@color/switch_thumb_tint_selector</item>
        <item name="trackDecorationTint">@color/switch_track_decor_tint_selector</item>
    </style>

<!--    TIME_PICKER_SECTION-->

    <style name="ThemeOverlay.Tratometr.AppTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="materialClockStyle">@style/AppTimePicker.Clock</item>
        <item name="materialTimePickerStyle">@style/AppTimePicker.Background</item>
        <item name="materialTimePickerTitleStyle">@style/AppTimePicker.Title</item>
        <item name="imageButtonStyle">@style/AppTimePicker.ImageButton</item>
        <item name="materialDisplayDividerStyle">@style/AppTimePicker.Dividers</item>
        <item name="chipStyle">@style/AppTimePicker.Chips</item>
        <item name="colorPrimary">?attr/appAccentColor</item>
    </style>

    <style name="AppTimePicker.Clock" parent="Widget.Material3.MaterialTimePicker.Clock">
        <item name="clockFaceBackgroundColor">?attr/appDividers</item>
        <item name="clockHandColor">?attr/appAccentColor</item>
    </style>

    <style name="AppTimePicker.Background" parent="Widget.Material3.MaterialTimePicker">
        <item name="backgroundTint">?attr/appCardBackground</item>
    </style>

    <style name="AppTimePicker.Title" parent="TextAppearance.Material3.MaterialTimePicker.Title">
        <item name="android:textAppearance">@style/AppTextH2</item>
        <item name="android:textColor">?attr/appTextPrimary</item>
    </style>

    <style name="AppTimePicker.ImageButton" parent="Widget.Material3.MaterialTimePicker.ImageButton">
        <item name="iconTint">?attr/appCardText</item>
    </style>

    <style name="AppTimePicker.Dividers" parent="Widget.Material3.MaterialTimePicker.Display.Divider">
        <item name="android:textColor">?attr/appTextPrimary</item>
    </style>

    <style name="AppTimePicker.Chips" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="android:textColor">?attr/appTextPrimary</item>
        <item name="chipBackgroundColor">@color/timepicker_time_container</item>
        <item name="android:clickable">false</item>
    </style>

    <!--    TIME_PICKER_SECTION_end-->

    <!--    TextInputLayout_SECTION-->
    <style name="AppTextInputLayout">
        <item name="boxBackgroundColor">?attr/appCardBackground</item>
        <item name="boxStrokeColor">@color/edit_text_box_background_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="cursorColor">?attr/appAccentColor</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusTopStart">@dimen/size_12dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/size_12dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/size_12dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/size_12dp</item>
        <item name="android:textColorHint">?attr/appTextSecondary</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_close</item>
        <item name="endIconTint">?attr/appTextPrimary</item>
        <item name="errorEnabled">true</item>
        <item name="cursorErrorColor">?attr/appErrorColor</item>
        <item name="boxStrokeErrorColor">?attr/appErrorColor</item>
        <item name="errorIconTint">?attr/appErrorColor</item>
        <item name="errorTextColor">?attr/appErrorColor</item>
        <item name="errorTextAppearance">@style/AppTextSecondary</item>
    </style>

    <style name="AppTextInputEditText">
        <item name="android:textColor">?attr/appTextPrimary</item>
        <item name="android:textAppearance">@style/AppTextPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0dp</item>
    </style>

    <!--    TextInputLayout_SECTION_end-->

    <!--    DATE_PICKER_SECTION-->

    <style name="ThemeOverlay.Tratometr.AppDatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarHeaderTitle">@style/AppDatePicker.HeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/AppDatePicker.HeaderSelection</item>
        <item name="materialCalendarDayOfWeekLabel">@style/AppDatePicker.DayOfWeekLabel</item>
        <item name="colorSurfaceContainerHigh">?attr/appBackgroundColor</item>
        <item name="colorOnSurfaceVariant">?attr/appTextPrimary</item>
    </style>

    <style name="AppDatePicker.HeaderTitle" parent="@style/Widget.Material3.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">?attr/appTextPrimary</item>
        <item name="android:textAppearance">@style/AppTextSecondaryBold</item>
    </style>

    <style name="AppDatePicker.HeaderSelection" parent="@style/Widget.Material3.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">?attr/appTextPrimary</item>
        <item name="android:textAppearance">@style/AppTextBigNumber</item>
    </style>

    <style name="AppDatePicker.DayOfWeekLabel" parent="@style/Widget.Material3.MaterialCalendar.DayOfWeekLabel">
        <item name="android:textAppearance">@style/AppTextPrimary.AllCaps</item>
        <item name="android:textColor">?attr/appTextPrimary</item>
    </style>


    <style name="ThemeOverlay.Tratometr.AppDatePicker.Fullscreen" parent="@style/ThemeOverlay.Tratometr.AppDatePicker">
        <item name="android:windowIsFloating">false</item>
        <item name="materialCalendarStyle">@style/AppDatePicker.CalendarStyle.Fullscreen</item>
        <item name="materialCalendarHeaderLayout">@style/Widget.Material3.MaterialCalendar.HeaderLayout.Fullscreen</item>
        <item name="materialCalendarHeaderSelection">@style/AppDatePicker.HeaderSelection.Fullscreen</item>
    </style>

    <style name="AppDatePicker.CalendarStyle.Fullscreen" parent="@style/Widget.Material3.MaterialCalendar.Fullscreen">
        <item name="rangeFillColor">?attr/appAccentColorFade</item>
    </style>

    <style name="AppDatePicker.HeaderSelection.Fullscreen" parent="@style/AppDatePicker.HeaderSelection">
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">20sp</item>
    </style>

    <!--    DATE_PICKER_SECTION_end-->

</resources>